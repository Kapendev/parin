    "description": "A delightfully simple 2D game engine.",
    "license": "MIT",
    "name": "parin",
    "stringImportPaths": [
        "source/parin"
    ],
    "subPackages" : [
        "packages/rin",
        "packages/setup",
        "packages/web",
        "packages/mapy",
        "packages/hello"
    ],
    "libs": [
        "raylib"
    ],
    "configurations": [
        {
            "name": "linux-x86_64",
            "platforms": ["linux-x86_64"],
            "targetType": "library",
            "lflags": ["-L$PACKAGE_DIR/vendor/linux_x86_64"]
        },
        {
            "name": "windows-x86_64",
            "platforms": ["windows-x86_64"],
            "targetType": "library",
            "copyFiles": ["vendor\\windows_x86_64\\*.dll"],
            "lflags-windows-msvc": ["/LIBPATH:$PACKAGE_DIR\\vendor\\windows_x86_64"],
            "lflags-windows-ldc": ["-L$PACKAGE_DIR\\vendor\\windows_x86_64"]
        },
        {
            "name": "osx",
            "platforms": ["osx"],
            "targetType": "library",
            "lflags": ["-L$PACKAGE_DIR/vendor/macos"]
        }
    ]
}
